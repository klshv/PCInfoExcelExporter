<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Task1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PC Info Excel Generator"
        Width="300"
        SizeToContent="Height"
        ResizeMode="NoResize">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <CheckBox Content="Open Excel file after generation" 
                  IsChecked="{Binding OpenExcelAfterGeneration, UpdateSourceTrigger=PropertyChanged}"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0,35,0,10">
            <Button Content="Generate Excel" 
                    Command="{Binding GenerateExcelCommand}"
                    Height="24" Width="100"/>
            <Button Content="Close" 
                    IsCancel="True" 
                    Command="{Binding CloseCommand}"
                    Height="24" Width="100"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
